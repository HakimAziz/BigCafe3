<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_foto_menu"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:background="@drawable/img_holder"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/txt_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Menu"
                android:textStyle="bold"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_harga_jual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Rp 50.000,-" />

            <TextView
                android:id="@+id/txt_ket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:textColor="@color/red"
                android:textSize="14sp"
                android:text="Not Available" />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_harga_jual_polos"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:text="Cuma angka" />

        <!--Gak keliatan -->
        <TextView
            android:id="@+id/txt_id_produk"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Id Produk gk keliatan" />

        <TextView
            android:id="@+id/txt_foto_menu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="gk keliatan" />

        <TextView
            android:id="@+id/txt_harga_modal"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="gk keliatan" />

        <TextView
            android:id="@+id/txt_kategori"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="gk keliatan" />
    </LinearLayout>

</android.support.v7.widget.CardView>