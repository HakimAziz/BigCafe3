<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:layout_marginVertical="3dp"
    card_view:cardUseCompatPadding="true"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="#ID-1278"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_pemesan_l"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Customer "
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text=":"/>
            <TextView
                android:id="@+id/txt_vpemesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bckg_round"
                android:padding="5dp"
                android:textAlignment="center"
                android:text="Table 3"
                android:layout_weight="1"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status "
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAlignment="center"
                android:text=":"/>
            <TextView
                android:id="@+id/txt_status_order"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ordered"
                android:layout_weight="1"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="txt_detail"
            />
        <TextView
            android:id="@+id/txt_total_harga"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="txt_total_harga"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>