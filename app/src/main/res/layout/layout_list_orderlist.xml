<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_id_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="#1278"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/txt_pemesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nama Pemesan :"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/txt_vpemesan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Meja 1"
                android:layout_weight="1"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/txt_detail"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="txt_detail"
            />
        <TextView
            android:id="@+id/txt_status_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="txt_status_order"
            />
        <TextView
            android:id="@+id/txt_total_harga"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="txt_total_harga"
            />


    </LinearLayout>

</android.support.v7.widget.CardView>